<div
  class="bg-white d-flex align-items-center fixed-top shadow"
  style="min-height: 56px; z-index: 5"
>
  <div class="container-fluid">
    <div class="row align-items-center">
      <!-- search -->
      <div class="col d-flex align-items-center">
        <!-- logo -->
        <a href="/">
          <i class="fab fa-facebook text-primary" style="font-size: 3rem"></i>
        </a>
      </div>
     
      <% if (locals.user){ %>
      <!-- nav -->
      <div class="col d-none d-xl-flex justify-content-center">
        <!-- home -->
        <div class="mx-4 nav__btn nav__btn-active">
          <a href="/">
            <button type="button" class="btn px-4">
              <i class="fas fa-home text-muted fs-4"></i>
            </button>
          </a>
        </div>
      </div>
      <!-- menus -->

      <div class="col d-flex align-items-center justify-content-end">
        <!-- avatar -->
        <div class="align-items-center justify-content-center d-none d-xl-flex">
          <p class="m-0"><%= locals.user.name %></p>
        </div>

        <!-- LOG out -->
        <div
          class="rounded-circle p-1 bg-gray d-flex align-items-center justify-content-center mx-2"
          style="width: 38px; height: 38px"
          type="button"
          id="notMenu"
        >
          <a href="/users/sign-out"> <i class="fa fa-sign-out"></i> </a>
        </div>
        <% } else {%>

        <div
          class="rounded-circle p-1 d-flex align-items-center justify-content-center mx-2"
          style="width: 80px; height: 38px"
          type="button"
          id="secondMenu"
        >
          <a href="/users/sign-in">Sign In</a>
        </div>

        <div
          class="rounded-circle p-1 d-flex align-items-center justify-content-center mx-2"
          style="width: 80px; height: 38px"
          type="button"
          id="secondMenu"
        >
          <a href="/users/sign-up">Sign Up</a>
        </div>

        <!-- end -->

        <% } %>
      </div>
    </div>
  </div>
</div>
